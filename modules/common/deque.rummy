# Drops N items from opposite direction

proc drops in
    dup! 0! equals! unless
        1! subtract!
        !drop drops!
    else
        drop!
    end
    return
end

proc rotates in
    dup 0 = unless
        1 -
        swap rotate!
        rotates
    else
        drop!
    end
    return
end

proc pair in
    rotate! dup! !rotate dup! rotate! swap! !rotate
    return
end

proc clear in
    repeat
        drop
    size 0 = until
    return
end